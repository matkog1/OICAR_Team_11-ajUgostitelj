<Window x:Class="WPF.Views.AdminPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin panel - AjUgostitelj" Height="450" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Admin dashboard" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <Button Content="Manage users" Width="200" Height="40" Margin="0,10,0,0" Click="OpenUserCrud_Click"/>
            <Button Content="Manage payments" Width="200" Height="40" Margin="0,10,0,0" Click="OpenPaymentsCrud_Click"/>
            <Button Content="Manage products" Width="200" Height="40" Margin="0,10,0,0" Click="OpenProductCrud_Click"/>
            <Button Content="Manage tables" Width="200" Height="40" Margin="0,10,0,0" Click="OpenTableCrud_Click"/>
            <Button Content="Manage inventory" Width="200" Height="40" Margin="0,10,0,0" Click="OpenInventoryCrud_Click"/>
            <Button Content="Manage categories"
        Width="200"
        Height="40"
        Margin="0,10,0,0"
        Click="OpenCategoryCrud_Click"/>
        </StackPanel>
    </Grid>
</Window>