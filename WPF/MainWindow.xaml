<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Login - ajUgostitelj" Height="400" Width="300">
    <Grid>
        <TextBlock Text="Username:" Margin="20,50,20,0" VerticalAlignment="Top" />
        <TextBox x:Name="UsernameTextBox" Margin="20,70,20,0" VerticalAlignment="Top" Height="25" />

        <TextBlock Text="Password:" Margin="20,110,20,0" VerticalAlignment="Top" />
        <PasswordBox x:Name="PasswordBox" Margin="20,130,20,0" VerticalAlignment="Top" Height="25" />

        <Button x:Name="LoginButton" Content="Login" Margin="20,180,20,0" VerticalAlignment="Top" Height="30" Click="LoginButton_Click" />

        <TextBlock Text="Don't have an account?" Margin="20,230,20,0" VerticalAlignment="Top" />
        <Button Content="Register here" Margin="20,250,20,0" VerticalAlignment="Top" Height="30" Click="RegisterButton_Click" />
    </Grid>
</Window>
